#include<stdio.h>
void read1(int arr[20], int n){
	printf("Enter %d elements : ",n);
	for(int i=0;i<n;i++){
		scanf("%d",&arr[i]);
	}
}
void display(int arr[], int n){
	for(int i=0;i<n;i++){
		printf("%d ",arr[i]);
	}
	printf("\n");
}
void bubbleSort(int arr[], int n){
	int i , j , temp ;
	for(int i=0;i<n;i++)
	{
		for( int j=0;j<n-1;j++)
		{
			if(arr[j]>arr[j+1])
			{
			int temp =arr[j];
			arr[j] = arr[j+1];
			arr[j+1] = temp;
			}
		}
	}
}
int binarySearch(int a[], int low, int high, int key){
	if(low>high){
		return -1;
	}
	int mid = low+(high-low)/2;
	if(a[mid] == key){
		return mid;
	}
	else if(a[mid]>key){
		return binarySearch(a, low, mid-1, key);
	}
	else{
		return binarySearch(a,mid+1, high,key);
	}
}
